<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.ulima.promul.ListadoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/iviImagenPromoDetallado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tviTituloPromoDetallado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="titulo"
        />

    <TextView
        android:id="@+id/tviDescripcionDetallado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        />

    <TextView
        android:id="@+id/tviCondiciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="condiciones"/>

    <TextView
        android:id="@+id/tviVigencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vigencia"/>
    </LinearLayout>
</FrameLayout>
